{
  "name": "playground",
  "private": true,
  "scripts": {
    "dev": "turbo dev",
    "dev:home": "pnpm --filter home dev",
    "dev:board": "pnpm --filter board dev",
    "build": "turbo build",
    "build:home": "pnpm --filter home build",
    "build:board": "pnpm --filter board build",
    "start": "pnpm -r start",
    "start:home": "pnpm --filter home start",
    "start:board": "pnpm --filter board start",
    "lint": "next lint",
    "clean": "bash scripts/clean.sh",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.5",
    "prettier": "^3.2.5",
    "turbo": "^2.0.14",
    "typescript": "^5.4.5"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18"
  }
}
